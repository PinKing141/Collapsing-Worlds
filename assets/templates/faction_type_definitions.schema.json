{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Faction Type Definitions",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "faction_types"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "faction_types": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/faction_type"
      }
    }
  },
  "definitions": {
    "domain": {
      "type": "string",
      "enum": ["LAW", "MILITARY", "CORPORATE", "CRIMINAL", "OCCULT", "CIVIC", "COSMIC"]
    },
    "jurisdiction": {
      "type": "string",
      "enum": ["LOCAL", "REGIONAL", "NATIONAL", "GLOBAL", "PLANETARY"]
    },
    "signature_type": {
      "type": "string",
      "enum": [
        "VISUAL_ANOMALY",
        "EM_SPIKE",
        "THERMAL_BLOOM",
        "ACOUSTIC_SHOCK",
        "CHEMICAL_RESIDUE",
        "BIO_MARKER",
        "PSYCHIC_ECHO",
        "DIMENSIONAL_RESIDUE",
        "GRAVITIC_DISTURBANCE",
        "ARCANE_RESONANCE",
        "CAUSAL_IMPRINT",
        "KINETIC_STRESS",
        "RADIATION_TRACE"
      ]
    },
    "response_doctrine": {
      "type": "string",
      "enum": ["ARREST", "SUPPRESS", "EXPLOIT", "STUDY", "ELIMINATE", "CONTAIN", "DISRUPT"]
    },
    "response_action": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind"],
      "properties": {
        "kind": {
          "type": "string",
          "minLength": 1
        },
        "params": {
          "type": "object"
        }
      }
    },
    "response_threshold": {
      "type": "object",
      "additionalProperties": false,
      "required": ["heat", "level"],
      "properties": {
        "heat": {
          "type": "integer",
          "minimum": 0
        },
        "level": {
          "type": "string",
          "pattern": "^[A-Z0-9_]+$"
        },
        "actions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/response_action"
          }
        }
      }
    },
    "detection_profile": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "signature_types": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/signature_type"
          }
        },
        "heat_min": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "response_profile": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "doctrine": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/response_doctrine"
          }
        },
        "thresholds": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/response_threshold"
          }
        }
      }
    },
    "faction_type": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "name",
        "domain",
        "default_jurisdiction",
        "detection",
        "response"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "domain": {
          "$ref": "#/definitions/domain"
        },
        "default_jurisdiction": {
          "$ref": "#/definitions/jurisdiction"
        },
        "detection": {
          "$ref": "#/definitions/detection_profile"
        },
        "response": {
          "$ref": "#/definitions/response_profile"
        },
        "narrative_pressure": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}
