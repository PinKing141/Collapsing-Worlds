{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Storylets",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "storylets"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "storylets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/storylet"
      }
    }
  },
  "definitions": {
    "category": {
      "type": "string",
      "enum": [
        "CIVILIAN_LIFE",
        "MASKED_LIFE",
        "INSTITUTIONAL_PRESSURE",
        "VILLAIN_OPPORTUNITIES"
      ]
    },
    "choice": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "text"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "text": {
          "type": "string",
          "minLength": 1
        },
        "effects": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "storylet": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "category", "text_stub", "choices"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "category": {
          "$ref": "#/definitions/category"
        },
        "preconditions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "text_stub": {
          "type": "string",
          "minLength": 1
        },
        "choices": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/choice"
          }
        },
        "effects": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
